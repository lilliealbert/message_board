<h2>Create a LilliePost!</h2>
<% if @post.errors %>
    <% @post.errors.full_messages.each do |message| %>
        <p class="error"> <%= message %></p>
    <% end %>    
<% end %>
<%= form_for @post, :url => { :action => "create" } do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_area :content, :size => "60x12" %>
    <p><%= f.submit "Post It!" %></p>
<% end %>
